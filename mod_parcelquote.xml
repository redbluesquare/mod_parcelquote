<?xml version="1.0" encoding="utf-8" ?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>Parcel Quote</name>
	<author>Darryl Usher</author>
	<version>0.0.1</version>
	<description>Quick Quote Module</description>
	<files>
		<filename>mod_parcelquote.xml</filename>
		<filename module="mod_parcelquote">mod_parcelquote.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/form_success.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" label="Module class suffix" 
				description="Please enter a module class suffix"
			/>
			</fieldset>
			<fieldset name="basic">
				<field name="pretext" type="textarea" label="Pre Text" 
				description="Please enter Text to show before Module" cols="30" rows="5"
			/>
				<field name="posttext" type="textarea" label="Post Text" 
				description="Please enter Text to show after Module" cols="30" rows="5"
			/>
			</fieldset>
		
		</fields>
	</config>
</extension>